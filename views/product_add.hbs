<div class="row">
    <div class="col-12">
        <div class="block">
            <div class="title">
                <strong>Nuevo Producto</strong>
            </div>
            <div class="block-body">
                <form action="products/add" method="POST" class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="img-picker">
                                <div class="img-upload-btn">
                                    <i class="fa fa-plus"></i>
                                    <input type="file" name="images" id="image_picker">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group row">
                                        <label for="" class="col-sm-2 form-control-label">Nombre</label>
                                        <div class="col-sm-10">
                                            <input id="inputHorizontalSuccess" name="name" type="text" placeholder="Nombre" class="form-control form-control-success">
                                            <small class="form-text">Nombre del estilo.</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="" class="col-sm-2 form-control-label">Material</label>
                                        <div class="col-sm-10">
                                            <select name="material" class="form-control mb-3 mb-3">
                                                <option value="cuero">Cuero</option>
                                                <option value="sintetico">Sintetico</option>
                                            </select>
                                            <small class="form-text">Material del calzado</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="" class="col-sm-2 form-control-label">Tipo</label>
                                        <div class="col-sm-10">
                                            <select name="type" class="form-control mb-3 mb-3">
                                                <option value="sandalias">Sandalias</option>
                                                <option value="plataforma">Plataforma</option>
                                                <option value="zapato_cerrado">Zapato Cerrado</option>
                                            </select>
                                            <small class="form-text">Tipo de calzado</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="" class="col-sm-2 form-control-label">Cantidad</label>
                                        <div class="col-sm-10">
                                            <input type="number" min="0" id="inputHorizontalSuccess" name="quantity" placeholder="0" class="form-control form-control-success">
                                            <small class="form-text">Cantidad adquirida.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="title">
                        <strong>Precios Unitarios</strong>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 form-control-label">Precio compra</label>
                                <div class="col-sm-10">
                                    <input type="number" min="0" step="0.01" id="inputHorizontalSuccess" name="acquisition_price" placeholder="0" class="form-control form-control-success">
                                    <small class="form-text">Precio de adquisici√≥n.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 form-control-label">Transporte</label>
                                <div class="col-sm-10">
                                    <input type="number" min="0" step="0.01" id="inputHorizontalSuccess" name="tranport_price_per_unit" placeholder="0" class="form-control form-control-success">
                                    <small class="form-text">Precio de transporte.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 form-control-label">Precio venta</label>
                                <div class="col-sm-10">
                                    <input type="number" min="0" step="0.01" id="inputHorizontalSuccess" name="sell_price" placeholder="0" class="form-control form-control-success">
                                    <small class="form-text">Precio de venta.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 form-control-label">Ganancia</label>
                                <div class="col-sm-10">
                                    <input type="number" id="inputHorizontalSuccess" placeholder="0" class="form-control form-control-success" disabled="disabled">
                                    <small class="form-text">Ganacia unitaria</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 form-control-label">IVA</label>
                                <div class="col-sm-10">
                                    <input type="number" min="0" step="0.01" id="inputHorizontalSuccess" name="IVA" placeholder="0" class="form-control form-control-success" disabled="disabled">
                                    <small class="form-text">Impuesto de venta.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 form-control-label">Precio final</label>
                                <div class="col-sm-10">
                                    <input type="number" id="inputHorizontalSuccess" name="final_price" placeholder="0" class="form-control form-control-success">
                                    <small class="form-text">Precio final por unidad</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="title">
                        <strong>Tallas</strong>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <div class="table-responsive"> 
                                <table class="table" id="table_tallas">
                                <thead>
                                    <tr>
                                    <th>Numero</th>
                                    <th>Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{!-- Auto --}}
                                </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="table-btn table-add" data-target="#table_tallas">
                                <i class="fa fa-plus"></i>
                            </div>
                            <div class="table-btn table-remove" data-target="#table_tallas">
                                <i class="fa fa-minus"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 align-items-center">
                            <button type="submit" class="btn btn-primary action-btn mt-4">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>